{
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/sundflux/webvaloa-core"
        },
        {
            "type": "vcs",
            "url": "https://github.com/sundflux/libvaloa"
        },
        {
            "type": "vcs",
            "url": "https://github.com/sundflux/libvaloa-db"
        }
    ],
    "require": {
        "sundflux/libvaloa": "^3.0.0",
        "sundflux/libvaloa-db": "^3.0.0",
        "sundflux/webvaloa-core": "^3.0.0",
        "symfony/yaml": "^4.2",
        "symfony/console": "^4.2",
        "symfony/var-dumper": "^4.2",
        "symfony/dotenv": "^4.3",
        "filp/whoops": "^2.1",
        "phpmailer/phpmailer": "^5.2",
        "ircmaxell/random-lib": "^1.2",
        "nategood/commando": "*",
        "gettext/gettext": "^4.4",
        "wujunze/php-cli-color": "*",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4"
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "ext/composer.json",
                "ext/*/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "ignore-duplicates": false,
            "merge-dev": true,
            "merge-extra": true,
            "merge-scripts": true
        }
    }
}
